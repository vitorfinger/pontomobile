#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    MainScreen:
    CheckoutScreen:

<MainScreen>:
    name: "main"
    Button:
        on_release: app.command_inserir_ponto("Entrada")
        text: "Entrada"
        color: 0,1,0,1
        font_size: 50
        size_hint: 0.75, 0.25
        pos_hint: {"center_x":0.5, "top":0.95}

    Button:
        on_release: app.command_inserir_ponto("Saida")
        text: "Sa√≠da"
        color: 1,0,0,1
        font_size: 50
        size_hint: 0.75, 0.25
        pos_hint: {"center_x":0.5, "top":0.65}

    Button:
        on_release: app.root.current = "checkout"
        text: "Check-outs"
        font_size:50
        size_hint: 0.75, 0.125
        pos_hint: {"center_x":0.5, "top": 0.2625}

<CheckoutScreen>:
    name: "checkout"
